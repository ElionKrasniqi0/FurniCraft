@model Order

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Order Details #@Model.OrderId</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Orders</a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Order Summary</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("f")</p>
                    <p><strong>Status:</strong> Completed</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
                    <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Order Items</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="~/Product/@item.Product.ProImage"
                                             alt="@item.Product.ProName"
                                             style="width: 60px; height: 60px; object-fit: cover; margin-right: 15px;">
                                        <div>
                                            <h6 class="mb-0">@item.Product.ProName</h6>
                                            <small class="text-muted">@item.Product.Descreption</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@item.Quantity</td>
                                <td>@((item.Price * item.Quantity).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4 p-3 bg-light rounded">
        <h5>Customer Information</h5>
        <hr>
        <div class="row">
            <div class="col-md-6">
                <p><strong>Name:</strong> @Model.User.UserName</p>
                <p><strong>Email:</strong> @Model.User.Email</p>
            </div>
            <div class="col-md-6">
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                <p><strong>City:</strong> @Model.City</p>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid rgba(33, 40, 50, 0.125);
    }

    .table th {
        border-top: none;
    }
</style>