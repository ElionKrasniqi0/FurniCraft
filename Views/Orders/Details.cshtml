@model Order

<div class="container mt-4 mb-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                </ol>
            </nav>
            <h1 class="h2 mb-0">Order Details</h1>
            <p class="text-muted mb-0">Placed on @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Orders
        </a>
    </div>

    <div class="row">
        <!-- Order Summary -->
        <div class="col-lg-8">
            <!-- Order Status Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="card-title mb-1">Order Status</h5>
                            <div class="d-flex align-items-center">
                                <div class="bg-success rounded-circle p-2 me-3">
                                    <i class="fas fa-check text-white"></i>
                                </div>
                                <div>
                                    <p class="mb-0 fw-semibold text-success">Completed</p>
                                    <small class="text-muted">Your order has been successfully delivered</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <button class="btn btn-outline-primary btn-sm" onclick="printOrder()">
                                <i class="fas fa-print me-1"></i>Print Receipt
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Printable Order Section -->
            <div id="printable-order">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-transparent py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Order #@Model.OrderId</h5>
                        <div class="text-muted small">@Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</div>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var item in Model.OrderDetails)
                            {
                                <div class="list-group-item border-0">
                                    <div class="row align-items-center">
                                        <div class="col-2 col-md-1">
                                            <img src="~/Product/@item.Product.ProImage"
                                                 alt="@item.Product.ProName"
                                                 class="img-fluid rounded"
                                                 style="max-height: 60px; object-fit: cover;">
                                        </div>
                                        <div class="col-7 col-md-6">
                                            <h6 class="mb-1">@item.Product.ProName</h6>
                                            <p class="text-muted mb-0 small">@item.Product.Descreption</p>
                                        </div>
                                        <div class="col-3 col-md-2 text-center">
                                            <span class="text-muted small">Qty: @item.Quantity</span>
                                        </div>
                                        <div class="col-12 col-md-3 text-md-end mt-2 mt-md-0">
                                            <span class="fw-semibold">€@((item.Price * item.Quantity).ToString("N2"))</span>
                                            <div class="text-muted small">€@item.Price.ToString("N2") each</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="mb-2">Shipping Information</h6>
                                <p class="mb-1">@Model.ShippingAddress</p>
                                <p class="mb-1">@Model.City</p>
                                <p class="mb-0">@Model.PhoneNumber</p>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted">Subtotal:</span>
                                    <span>€@Model.TotalAmount.ToString("N2")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted">Shipping:</span>
                                    <span class="text-success">Free</span>
                                </div>
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="text-muted">Tax:</span>
                                    <span>€0.00</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between mb-0">
                                    <span class="fw-semibold">Total:</span>
                                    <span class="fw-semibold text-primary">€@Model.TotalAmount.ToString("N2")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Order Notes (Non-printable) -->
            @if (!string.IsNullOrEmpty(Model.Comment))
            {
                <div class="card border-0 shadow-sm mb-4 no-print">
                    <div class="card-header bg-transparent py-3">
                        <h5 class="mb-0">Order Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Comment</p>
                    </div>
                </div>
            }
        </div>

        <!-- Order Summary Sidebar (Non-printable) -->
        <div class="col-lg-4 no-print">
            <!-- Order Summary -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-transparent py-3">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span>€@Model.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tax</span>
                        <span>€0.00</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-semibold">Total</span>
                        <span class="fw-semibold text-primary">€@Model.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary">
                            <i class="fas fa-shopping-bag me-2"></i>Reorder
                        </button>
                    </div>
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent py-3">
                    <h5 class="mb-0">Shipping Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="small text-muted mb-1">Shipping Address</h6>
                        <p class="mb-0">@Model.ShippingAddress</p>
                        <p class="mb-0">@Model.City</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="small text-muted mb-1">Contact Information</h6>
                        <p class="mb-0">@Model.User.UserName</p>
                        <p class="mb-0">@Model.User.Email</p>
                        <p class="mb-0">@Model.PhoneNumber</p>
                    </div>
                    <div>
                        <h6 class="small text-muted mb-1">Shipping Method</h6>
                        <p class="mb-0">Standard Shipping (3-5 business days)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Support Section (Non-printable) -->
    <div class="card border-0 shadow-sm mt-4 no-print">
        <div class="card-body text-center py-4">
            <div class="icon-large text-muted mb-3">
                <i class="fas fa-headset"></i>
            </div>
            <h5>Need Help With Your Order?</h5>
            <p class="text-muted mb-3">Our customer support team is here to help with any questions</p>
            <div class="d-flex justify-content-center gap-2">
                <a href="/Home/Support" class="btn btn-outline-primary">
                    <i class="fas fa-question-circle me-2"></i>Contact Support
                </a>
                <a href="/Home/Product" class="btn btn-primary">
                    <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />
<style>
    .card {
        border-radius: 0.75rem;
    }

    .breadcrumb {
        background: transparent;
        padding: 0;
        margin-bottom: 0.5rem;
    }

    .icon-large {
        font-size: 2.5rem;
    }

    .list-group-item {
        padding: 1.25rem;
        border-bottom: 1px solid #f1f1f1;
    }

        .list-group-item:last-child {
            border-bottom: none;
        }

    .bg-success {
        background-color: #28a745 !important;
    }

    /* Print Styles */
    @@media print {
        .no-print {
            display: none !important;
        }

        body * {
            visibility: hidden;
        }

        #printable-order, #printable-order * {
            visibility: visible;
        }

        #printable-order {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }

        .btn, .breadcrumb, .navbar {
            display: none !important;
        }
    }
</style>

@section Scripts {
    <script>
        function printOrder() {
            window.print();
        }

        $(document).ready(function() {
            // Add hover effects to cards
            $('.card').hover(
                function() {
                    $(this).css('transform', 'translateY(-2px)');
                },
                function() {
                    $(this).css('transform', 'translateY(0)');
                }
            );
        });
    </script>
}
