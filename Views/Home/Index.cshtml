@section Scripts {
	<script>
		$(document).ready(function() {
			// ... (keep your existing code)

			// Search functionality
			function performSearch() {
				var value = $('#searchInput').val().toLowerCase().trim();
				if (value.length === 0) {
					$('.product-card').parent().show();
					return;
				}

				$('.product-card').each(function() {
					var productText = $(this).text().toLowerCase();
					var productCard = $(this).closest('.col-xl-3, .col-lg-4, .col-md-6, .col-6'); // Match your column classes

					if (productText.indexOf(value) > -1) {
						productCard.show();
					} else {
						productCard.hide();
					}
				});
			}

			// Search on button click
			$('#searchButton').click(function() {
				performSearch();
			});

			// Search on Enter key press
			$('#searchInput').keypress(function(e) {
				if (e.which === 13) { // Enter key
					performSearch();
				}
			});

			// Clear search when input is empty
			$('#searchInput').on('input', function() {
				if ($(this).val().trim() === '') {
					performSearch(); // This will show all products
				}
			});

			// ... (rest of your existing JavaScript code)
		});

				function performSearch() {
			var value = $('#searchInput').val().toLowerCase().trim();
			var hasResults = false;

			if (value.length === 0) {
				$('.product-card').parent().show();
				$('#noResultsMessage').remove();
				return;
			}

			$('.product-card').each(function() {
				var productText = $(this).text().toLowerCase();
				var productCard = $(this).closest('.col-xl-3, .col-lg-4, .col-md-6, .col-6');

				if (productText.indexOf(value) > -1) {
					productCard.show();
					hasResults = true;
					// Optional: highlight matching text
					$(this).html($(this).html().replace(
						new RegExp(value, 'gi'),
						match => `<span class="search-highlight">${match}</span>`
					));
				} else {
					productCard.hide();
				}
			});

			// Add no results message if needed
			if (!hasResults && !$('#noResultsMessage').length) {
				$('.row.g-4').append(`
					<div class="col-12 no-results" id="noResultsMessage">
						<i class="fas fa-search"></i>
						<h4>No products found</h4>
						<p>Try different search terms</p>
					</div>
				`);
			} else if (hasResults) {
				$('#noResultsMessage').remove();
			}
		}

		var productText = $(this).find('.card-title').text().toLowerCase();
	</script>
}
