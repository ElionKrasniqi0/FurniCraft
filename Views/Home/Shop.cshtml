@model ShopViewModel

<!-- Enhanced Hero Section -->
<div class="hero bg-gradient-primary">
    <div class="container">
        <div class="row align-items-center min-vh-40 py-5">
            <div class="col-lg-6">
                <div class="intro-excerpt">
                    <h1 class="display-4 fw-bold text-white mb-3">Discover Premium Furniture</h1>
                    <p class="lead text-white-80 mb-4">Transform your space with our curated collection of handcrafted furniture pieces designed for modern living</p>
                    <div class="d-flex flex-wrap gap-3">
                        <a href="#featured-products" class="btn btn-light btn-lg px-4 py-2 rounded-pill shadow-sm">
                            <i class="fas fa-shopping-bag me-2"></i>Shop Now
                        </a>
                        <a href="#categories" class="btn btn-outline-light btn-lg px-4 py-2 rounded-pill">
                            <i class="fas fa-th me-2"></i>Browse Categories
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image-container position-relative">
                    <img src="https://images.unsplash.com/photo-1556228453-efd6c1ff04f6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80"
                         alt="Modern Furniture Collection"
                         class="img-fluid rounded-4 shadow-lg floating-animation">
                    <div class="position-absolute top-0 start-0 mt-4 ms-4">
                        <span class="badge bg-warning text-dark fs-6 px-3 py-2 shadow">
                            <i class="fas fa-star me-1"></i>New Arrivals
                        </span>
                    </div>
                    <div class="position-absolute bottom-0 end-0 mb-4 me-4">
                        <span class="badge bg-success fs-6 px-3 py-2 shadow">
                            <i class="fas fa-truck me-1"></i>Free Shipping
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Shopping Cart Notification -->
<div id="cartNotification" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    <!-- Toast notifications will be inserted here dynamically -->
</div>

<!-- Main Content -->
<div class="container mb-5 mt-4">
    <!-- Enhanced Search and Filter Bar -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden glass-effect">
                <div class="card-body p-4">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-5">
                            <div class="input-group input-group-lg search-container">
                                <span class="input-group-text bg-white border-end-0 ps-4">
                                    <i class="fas fa-search text-primary"></i>
                                </span>
                                <input type="text" class="form-control form-control-lg border-start-0 px-3 search-input"
                                       placeholder="Search furniture, categories, brands..."
                                       id="searchInput">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select form-select-lg border-0 bg-light-subtle shadow-sm" id="sortSelect">
                                <option selected>Sort by: Featured</option>
                                <option value="price-asc">Price: Low to High</option>
                                <option value="price-desc">Price: High to Low</option>
                                <option value="newest">Newest Arrivals</option>
                                <option value="popular">Most Popular</option>
                                <option value="rating">Best Rated</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex justify-content-end">
                            <button class="btn btn-primary btn-lg px-4 d-flex align-items-center gap-2 filter-btn"
                                    type="button" data-bs-toggle="offcanvas" data-bs-target="#filterOffcanvas">
                                <i class="fas fa-sliders-h"></i>
                                <span>Filters</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Categories Section -->
    <section id="categories" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="h2 fw-bold text-dark mb-2">Shop by Category</h2>
                <p class="text-muted mb-0">Explore our carefully curated furniture categories</p>
            </div>
            <a href="#" class="btn btn-link text-primary fw-semibold text-decoration-none">
                View all categories <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>

        <div class="row g-4">
            @foreach (var cat in Model.Categories.OrderBy(c => c.CatName).Take(6))
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a href="/Home/ProductCategory/@cat.CatId" class="text-decoration-none text-dark">
                        <div class="card border-0 h-100 category-card transition-all hover-lift">
                            <div class="card-img-top ratio ratio-1x1 bg-gradient-light rounded-4 overflow-hidden position-relative">
                                <img src="~/category/@cat.CatPhoto" alt="@cat.CatName"
                                     class="img-fluid p-4 object-fit-contain transition-all category-image">
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-primary rounded-pill">
                                        @Model.Products.Count(p => p.CatId == cat.CatId)
                                    </span>
                                </div>
                            </div>
                            <div class="card-body text-center p-3">
                                <h6 class="card-title mb-0 fw-semibold text-dark">@cat.CatName</h6>
                                <small class="text-muted">Collection</small>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>

    <!-- Enhanced Featured Products -->
    <section id="featured-products" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="h2 fw-bold text-dark mb-2">Featured Furniture</h2>
                <p class="text-muted mb-0">Handpicked selections for your dream home</p>
            </div>
            <div class="d-flex gap-2">
                <a href="/Home/Product" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="fas fa-grid me-2"></i>View All
                </a>
                <div class="btn-group view-toggle" role="group">
                    <button type="button" class="btn btn-outline-primary grid-view active rounded-start-pill">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-outline-primary list-view rounded-end-pill">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Grid View -->
        <div class="row g-4" id="productGrid">
            @foreach (var item in Model.Products)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card product-card h-100 border-0 shadow-sm position-relative overflow-hidden hover-lift">
                        <!-- Product Badges -->
                        <div class="position-absolute top-0 start-0 m-3">
                            @if (item.Price > 500)
                            {
                                <span class="badge bg-danger px-2 py-1 fw-normal shadow">
                                    <i class="fas fa-crown me-1"></i>Premium
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success px-2 py-1 fw-normal shadow">
                                    <i class="fas fa-bolt me-1"></i>Popular
                                </span>
                            }
                        </div>

                        <!-- Wishlist Button -->
                        <div class="position-absolute top-0 end-0 m-3">
                            <button class="btn btn-light rounded-circle shadow-sm wishlist-btn p-2 hover-scale">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>

                        <!-- Product Image -->
                        <a href="/Home/ProductDetailes/@item.ProId" class="product-image-link text-decoration-none">
                            <div class="card-img-top bg-gradient-light rounded-top overflow-hidden position-relative">
                                <img src="~/Product/@item.ProImage" alt="@item.ProName"
                                     class="img-fluid p-4 w-100 product-image"
                                     style="height: 220px; object-fit: contain;">
                                <div class="image-overlay"></div>
                            </div>
                        </a>

                        <!-- Product Body -->
                        <div class="card-body p-4">
                            <div class="d-flex flex-column h-100">
                                <div class="mb-3">
                                    <a href="/Home/ProductDetailes/@item.ProId" class="text-decoration-none text-dark">
                                        <h6 class="card-title mb-2 fw-bold fs-6 lh-sm product-title">@item.ProName</h6>
                                    </a>
                                    <p class="small text-muted mb-0 category-badge">
                                        <i class="fas fa-tag me-1"></i>@item.Category?.CatName
                                    </p>
                                </div>

                                <!-- Rating -->
                                <div class="product-rating mb-3">
                                    <div class="stars small text-warning">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                    </div>
                                    <small class="text-muted">(24 reviews)</small>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="fw-bold text-primary fs-5 price">€@item.Price.ToString("N2")</span>
                                            @if (item.Price > 200)
                                            {
                                                <span class="text-muted text-decoration-line-through small ms-1 original-price">
                                                    €@((item.Price * 1.2m).ToString("N2"))
                                                </span>
                                            }
                                        </div>
                                        <!-- Fixed Add to Cart Button -->
                                        <button type="button" class="btn btn-primary rounded-circle p-2 d-flex align-items-center justify-content-center add-to-cart-btn hover-scale"
                                                data-product-id="@item.ProId"
                                                data-product-name="@item.ProName"
                                                data-product-price="@item.Price"
                                                data-product-image="@item.ProImage">
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- List View (hidden by default) -->
        <div class="row d-none" id="productList">
            @foreach (var item in Model.Products)
            {
                <div class="col-12 mb-4">
                    <div class="card border-0 shadow-sm overflow-hidden hover-lift">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <a href="/Home/ProductDetailes/@item.ProId" class="product-image-link text-decoration-none">
                                    <div class="h-100 bg-gradient-light position-relative">
                                        <img src="~/Product/@item.ProImage" alt="@item.ProName"
                                             class="img-fluid h-100 w-100 object-fit-cover">
                                        <div class="image-overlay"></div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <div class="card-body p-4">
                                    <a href="/Home/ProductDetailes/@item.ProId" class="text-decoration-none text-dark">
                                        <h5 class="card-title fw-bold mb-2">@item.ProName</h5>
                                    </a>
                                    <p class="small text-muted mb-2">
                                        <i class="fas fa-tag me-1"></i>@item.Category?.CatName
                                    </p>
                                    <p class="card-text text-muted mb-3">@item.Descreption</p>
                                    <div class="d-flex align-items-center">
                                        <div class="rating me-2 small text-warning">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                        </div>
                                        <span class="small text-muted">(24 reviews)</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card-body h-100 d-flex flex-column justify-content-between p-4 bg-light-subtle">
                                    <div class="text-end">
                                        <div class="fw-bold text-primary fs-3 mb-1 price">€@item.Price.ToString("N2")</div>
                                        @if (item.Price > 200)
                                        {
                                            <div class="text-muted text-decoration-line-through small original-price">
                                                €@((item.Price * 1.2m).ToString("N2"))
                                            </div>
                                        }
                                        <div class="mt-2">
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>In Stock
                                            </span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column gap-2">
                                        <!-- Fixed Add to Cart Button for List View -->
                                        <button type="button" class="btn btn-primary w-100 py-2 add-to-cart-btn"
                                                data-product-id="@item.ProId"
                                                data-product-name="@item.ProName"
                                                data-product-price="@item.Price"
                                                data-product-image="@item.ProImage">
                                            <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                                        </button>
                                        <button class="btn btn-outline-secondary w-100 py-2">
                                            <i class="far fa-heart me-2"></i> Add to Wishlist
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Enhanced Pagination with Hover Effects -->
    <nav class="mt-5">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link border-0 rounded-pill mx-1 pagination-btn" href="#" tabindex="-1" aria-disabled="true">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
            <li class="page-item active">
                <a class="page-link border-0 rounded-pill mx-1 pagination-btn pagination-active" href="#">
                    1
                </a>
            </li>
            <li class="page-item">
                <a class="page-link border-0 rounded-pill mx-1 pagination-btn" href="#">
                    2
                </a>
            </li>
            <li class="page-item">
                <a class="page-link border-0 rounded-pill mx-1 pagination-btn" href="#">
                    3
                </a>
            </li>
            <li class="page-item">
                <a class="page-link border-0 rounded-pill mx-1 pagination-btn" href="#">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>

<!-- Enhanced Filter Offcanvas -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="filterOffcanvas">
    <div class="offcanvas-header border-bottom py-4">
        <h5 class="offcanvas-title fw-bold text-primary">
            <i class="fas fa-filter me-2"></i>Filters
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body py-4">
        <!-- Price Filter -->
        <div class="mb-4">
            <h6 class="fw-bold mb-3 text-dark">Price Range</h6>
            <div id="priceSlider" class="mb-3"></div>
            <div class="d-flex justify-content-between">
                <span class="badge bg-light text-dark border">€0</span>
                <span class="badge bg-light text-dark border">€1000+</span>
            </div>
            <input type="hidden" id="minPrice" value="0">
            <input type="hidden" id="maxPrice" value="1000">
        </div>

        <!-- Categories Filter -->
        <div class="mb-4">
            <h6 class="fw-bold mb-3 text-dark">Categories</h6>
            <div class="list-group list-group-flush">
                @foreach (var cat in Model.Categories.OrderBy(c => c.CatName).Take(5))
                {
                    <a href="/Home/ProductCategory/@cat.CatId"
                       class="list-group-item list-group-item-action border-0 px-0 py-2 d-flex justify-content-between align-items-center hover-bg">
                        <span>@cat.CatName</span>
                        <span class="badge bg-primary rounded-pill">@Model.Products.Count(p => p.CatId == cat.CatId)</span>
                    </a>
                }
                <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-2 text-primary fw-semibold">
                    View all categories <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>

        <!-- Additional Filters -->
        <div class="mb-4">
            <h6 class="fw-bold mb-3 text-dark">Materials</h6>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="" id="materialWood">
                <label class="form-check-label" for="materialWood">
                    <i class="fas fa-tree me-2 text-success"></i>Wood
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="" id="materialMetal">
                <label class="form-check-label" for="materialMetal">
                    <i class="fas fa-hammer me-2 text-secondary"></i>Metal
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="" id="materialFabric">
                <label class="form-check-label" for="materialFabric">
                    <i class="fas fa-couch me-2 text-warning"></i>Fabric
                </label>
            </div>
        </div>

        <div class="d-grid gap-2 mt-4">
            <button class="btn btn-primary py-3 rounded-pill fw-semibold" type="button">
                <i class="fas fa-check me-2"></i>Apply Filters
            </button>
            <button class="btn btn-outline-secondary py-3 rounded-pill" type="button">
                <i class="fas fa-undo me-2"></i>Reset All
            </button>
        </div>
    </div>
</div>

<!-- Enhanced Mini Cart Sidebar -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="cartOffcanvas" aria-labelledby="cartOffcanvasLabel">
    <div class="offcanvas-header border-bottom py-4">
        <h5 class="offcanvas-title fw-bold text-primary" id="cartOffcanvasLabel">
            <i class="fas fa-shopping-cart me-2"></i> Your Cart
            <span class="badge bg-primary ms-2" id="cartItemCount">0</span>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        <div id="cartItemsContainer" class="h-100">
            <div class="d-flex flex-column h-100">
                <div class="flex-grow-1 p-3" id="cartItemsList">
                    <div class="text-center py-5" id="emptyCartMessage">
                        <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted mb-2">Your cart is empty</h5>
                        <p class="text-muted mb-4">Start adding some beautiful furniture!</p>
                        <a href="#featured-products" class="btn btn-primary rounded-pill px-4" data-bs-dismiss="offcanvas">
                            <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                        </a>
                    </div>
                </div>
                <div class="border-top p-4 bg-light-subtle" id="cartSummary" style="display: none;">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="fw-semibold">Subtotal:</span>
                        <span class="fw-bold" id="cartSubtotal">€0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-semibold">Shipping:</span>
                        <span class="fw-bold text-success" id="cartShipping">Free</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 fs-5">
                        <span class="fw-bold">Total:</span>
                        <span class="fw-bold text-primary" id="cartTotal">€0.00</span>
                    </div>
                    <div class="d-grid gap-2">
                        <a href="/Carts/ViewCart" class="btn btn-primary rounded-pill py-3 fw-semibold">
                            <i class="fas fa-shopping-cart me-2"></i>View Full Cart
                        </a>
                        <a href="/Carts/Checkout" class="btn btn-outline-primary rounded-pill py-3">
                            <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Styles -->
<style>
    :root {
        --primary-color: #3b5d50;
        --secondary-color: #f9bf29;
        --accent-color: #2d4a3f;
        --light-color: #f8f9fa;
        --dark-color: #2f2f2f;
        --success-color: #28a745;
        --warning-color: #ffc107;
        --gradient-primary: linear-gradient(135deg, #3b5d50 0%, #2d4a3f 100%);
        --gradient-light: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        --shadow-soft: 0 4px 20px rgba(0,0,0,0.08);
        --shadow-medium: 0 8px 30px rgba(0,0,0,0.12);
        --shadow-strong: 0 12px 40px rgba(0,0,0,0.15);
        --border-radius: 1rem;
    }

    .bg-gradient-primary {
        background: var(--gradient-primary);
    }

    .bg-gradient-light {
        background: var(--gradient-light);
    }

    .min-vh-40 {
        min-height: 40vh;
    }

    .hero {
        position: relative;
        overflow: hidden;
    }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="%23ffffff10" points="0,1000 1000,0 1000,1000"/></svg>');
            background-size: cover;
            opacity: 0.1;
        }

    .text-white-80 {
        color: rgba(255, 255, 255, 0.8);
    }

    .glass-effect {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-strong);
        }

    .hover-scale {
        transition: transform 0.2s ease;
    }

        .hover-scale:hover {
            transform: scale(1.1);
        }

    .hover-bg:hover {
        background-color: var(--light-color);
    }

    .floating-animation {
        animation: floating 3s ease-in-out infinite;
    }

    @@keyframes floating {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    .search-container {
        position: relative;
    }

    .search-input {
        border-radius: 50px;
        padding-left: 1rem;
    }

        .search-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(59, 93, 80, 0.25);
        }

    .category-card {
        border-radius: var(--border-radius);
        overflow: hidden;
        background: white;
    }

    .category-image {
        transition: all 0.3s ease;
    }

    .category-card:hover .category-image {
        transform: scale(1.1);
    }

    .product-card {
        border-radius: var(--border-radius);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .product-image {
        transition: all 0.3s ease;
        position: relative;
    }

    .product-card:hover .product-image {
        transform: scale(1.05);
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .image-overlay {
        opacity: 1;
    }

    .product-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 2.8rem;
    }

    .category-badge {
        background: var(--light-color);
        padding: 0.25rem 0.5rem;
        border-radius: 50px;
        font-size: 0.75rem;
    }

    .price {
