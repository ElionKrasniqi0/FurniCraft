<!-- Enhanced Scripts -->
@section Scripts {
    <script>
        // Enhanced cart management object
        const cartManager = {
            items: [],
            total: 0,
            itemCount: 0,

            init: function() {
                this.loadCart();
                this.updateCartUI();
                this.initializeAnimations();
                this.initializeAddToCartListeners();
            },

            initializeAddToCartListeners: function() {
                // Initialize add to cart button listeners
                $(document).on('click', '.add-to-cart-btn', function(e) {
                    e.preventDefault();
                    const button = $(this);
                    const productId = button.data('product-id');
                    const productName = button.data('product-name');
                    const productPrice = parseFloat(button.data('product-price'));
                    const productImage = button.data('product-image');

                    cartManager.handleAddToCart(button, productId, productName, productPrice, productImage);
                });
            },

            handleAddToCart: function(button, productId, productName, productPrice, productImage) {
                const originalContent = button.html();

                // Show loading state
                button.prop('disabled', true).html('<span class="loading-spinner"></span>');

                // Add pulse animation to product card
                button.closest('.product-card, .card').addClass('adding-to-cart');

                // Make AJAX call to add to cart
                $.ajax({
                    url: '/Carts/AddToCart',
                    type: 'POST',
                    data: {
                        ProId: productId,
                        qty: 1
                    },
                    success: function(response) {
                        if (response.success) {
                            // Add item to local cart manager
                            cartManager.addItem(productId, productName, productPrice, productImage, 1);

                            // Show success state
                            button.html('<i class="fas fa-check"></i>');
                            button.closest('.product-card, .card').removeClass('adding-to-cart').addClass('added-to-cart');

                            // Reset button after delay
                            setTimeout(() => {
                                button.html(originalContent);
                                button.prop('disabled', false);
                                button.closest('.product-card, .card').removeClass('added-to-cart');
                            }, 1500);
                        } else {
                            // Handle error or redirect to login
                            if (response.redirectUrl) {
                                window.location.href = response.redirectUrl;
                            } else {
                                cartManager.showErrorNotification('Failed to add item to cart');
                                button.html(originalContent);
                                button.prop('disabled', false);
                                button.closest('.product-card, .card').removeClass('adding-to-cart');
                            }
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error adding to cart:', error);
                        cartManager.showErrorNotification('Error adding item to cart. Please try again.');
                        button.html(originalContent);
                        button.prop('disabled', false);
                        button.closest('.product-card, .card').removeClass('adding-to-cart');
                    }
                });
            },

            showErrorNotification: function(message) {
                const toastId = 'error-toast-' + Date.now();
                const toastHTML = `
                    <div id="${toastId}" class="toast cart-toast border-danger" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header bg-danger text-white">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong class="me-auto">Error</strong>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            ${message}
                        </div>
                    </div>
                `;

                $('#cartNotification').append(toastHTML);
                const toast = new bootstrap.Toast(document.getElementById(toastId));
                toast.show();

                // Remove toast from DOM after it's hidden
                document.getElementById(toastId).addEventListener('hidden.bs.toast', function() {
                    this.remove();
                });
            },

            initializeAnimations: function() {
                // Initialize any animations
                this.initializeScrollAnimations();
                this.initializeHoverEffects();
            },

            initializeScrollAnimations: function() {
                // Add scroll animations for elements
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('animate-in');
                        }
                    });
                });

                document.querySelectorAll('.product-card, .category-card').forEach(el => {
                    observer.observe(el);
                });
            },

            initializeHoverEffects: function() {
                // Enhanced hover effects
                document.querySelectorAll('.product-card').forEach(card => {
                    card.addEventListener('mouseenter', function() {
                        this.style.transform = 'translateY(-8px)';
                    });

                    card.addEventListener('mouseleave', function() {
                        this.style.transform = 'translateY(0)';
                    });
                });
            },

            loadCart: function() {
                const savedCart = localStorage.getItem('furnitureCart');
                if (savedCart) {
                    const cartData = JSON.parse(savedCart);
                    this.items = cartData.items || [];
                    this.total = cartData.total || 0;
                    this.itemCount = cartData.itemCount || 0;
                }
            },

            saveCart: function() {
                const cartData = {
                    items: this.items,
                    total: this.total,
                    itemCount: this.itemCount
                };
                localStorage.setItem('furnitureCart', JSON.stringify(cartData));
            },

            addItem: function(productId, productName, productPrice, productImage, quantity = 1) {
                const existingItem = this.items.find(item => item.id === productId);

                if (existingItem) {
                    existingItem.quantity += quantity;
                } else {
                    this.items.push({
                        id: productId,
                        name: productName,
                        price: productPrice,
                        image: productImage,
                        quantity: quantity
                    });
                }

                this.calculateTotals();
                this.saveCart();
                this.updateCartUI();
                this.showAddToCartNotification(productName, productImage);
                this.animateCartIcon();
            },

            removeItem: function(productId) {
                this.items = this.items.filter(item => item.id !== productId);
                this.calculateTotals();
                this.saveCart();
                this.updateCartUI();
            },

            updateQuantity: function(productId, quantity) {
                const item = this.items.find(item => item.id === productId);
                if (item) {
                    item.quantity = quantity;
                    if (item.quantity <= 0) {
                        this.removeItem(productId);
                    } else {
                        this.calculateTotals();
                        this.saveCart();
                        this.updateCartUI();
                    }
                }
            },

            calculateTotals: function() {
                this.itemCount = this.items.reduce((total, item) => total + item.quantity, 0);
                this.total = this.items.reduce((total, item) => total + (item.price * item.quantity), 0);
            },

            updateCartUI: function() {
                // Update cart count badge with animation
                const cartCount = $('#cartItemCount');
                const currentCount = parseInt(cartCount.text()) || 0;
                const newCount = this.itemCount;

                if (newCount !== currentCount) {
                    cartCount.text(newCount);
                    if (newCount > currentCount) {
                        cartCount.addClass('pulse');
                        setTimeout(() => cartCount.removeClass('pulse'), 300);
                    }
                }

                // Update cart items list
                this.renderCartItems();

                // Update cart summary
                this.updateCartSummary();
            },

            animateCartIcon: function() {
                // Add animation to cart icon
                const cartIcon = $('.add-to-cart-btn i');
                cartIcon.addClass('bounce');
                setTimeout(() => cartIcon.removeClass('bounce'), 300);
            },

            renderCartItems: function() {
                const $cartItemsList = $('#cartItemsList');
                const $emptyCartMessage = $('#emptyCartMessage');
                const $cartSummary = $('#cartSummary');

                if (this.items.length === 0) {
                    $emptyCartMessage.show();
                    $cartSummary.hide();
                    $cartItemsList.empty();
                    return;
                }

                $emptyCartMessage.hide();
                $cartSummary.show();

                let cartItemsHTML = '';
                this.items.forEach(item => {
                    cartItemsHTML += `
                        <div class="cart-item">
                            <div class="d-flex gap-3">
                                <img src="/Product/${item.image}" alt="${item.name}" class="cart-item-image">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1 fw-semibold">${item.name}</h6>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center gap-2">
                                            <button class="btn btn-sm btn-outline-secondary quantity-btn hover-scale" data-action="decrease" data-id="${item.id}">-</button>
                                            <span class="fw-semibold">${item.quantity}</span>
                                            <button class="btn btn-sm btn-outline-secondary quantity-btn hover-scale" data-action="increase" data-id="${item.id}">+</button>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold text-primary">€${(item.price * item.quantity).toFixed(2)}</div>
                                            <button class="btn btn-sm btn-link text-danger p-0 remove-item" data-id="${item.id}">
                                                <small><i class="fas fa-trash me-1"></i>Remove</small>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });

                $cartItemsList.html(cartItemsHTML);

                // Attach event listeners to the new buttons
                $('.quantity-btn').on('click', function() {
                    const productId = $(this).data('id');
                    const action = $(this).data('action');
                    const currentQuantity = cartManager.items.find(item => item.id === productId)?.quantity || 0;

                    if (action === 'increase') {
                        cartManager.updateQuantity(productId, currentQuantity + 1);
                    } else if (action === 'decrease') {
                        cartManager.updateQuantity(productId, currentQuantity - 1);
                    }
                });

                $('.remove-item').on('click', function() {
                    const productId = $(this).data('id');
                    cartManager.removeItem(productId);
                });
            },

            updateCartSummary: function() {
                const subtotal = this.total;
                const shipping = subtotal > 0 ? 9.99 : 0;
                const total = subtotal + shipping;

                $('#cartSubtotal').text(`€${subtotal.toFixed(2)}`);
                $('#cartShipping').text(`€${shipping.toFixed(2)}`);
                $('#cartTotal').text(`€${total.toFixed(2)}`);
            },

            showAddToCartNotification: function(productName, productImage) {
                const toastId = 'toast-' + Date.now();
                const toastHTML = `
                    <div id="${toastId}" class="toast cart-toast" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <strong class="me-auto">Added to Cart</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            <div class="d-flex align-items-center gap-3">
                                <img src="/Product/${productImage}" alt="${productName}" class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                <div>
                                    <div class="fw-semibold">${productName}</div>
                                    <div class="text-muted small">Successfully added to your cart</div>
                                </div>
                            </div>
                            <div class="mt-3 d-grid gap-2">
                                <button class="btn btn-sm btn-outline-primary rounded-pill" data-bs-dismiss="toast">Continue Shopping</button>
                                <button class="btn btn-sm btn-primary rounded-pill" data-bs-dismiss="toast" data-bs-toggle="offcanvas" data-bs-target="#cartOffcanvas">View Cart</button>
                            </div>
                        </div>
                    </div>
                `;

                $('#cartNotification').append(toastHTML);
                const toast = new bootstrap.Toast(document.getElementById(toastId));
                toast.show();

                // Remove toast from DOM after it's hidden
                document.getElementById(toastId).addEventListener('hidden.bs.toast', function() {
                    this.remove();
                });
            }
        };

        $(document).ready(function() {
            // Initialize cart manager
            cartManager.init();

            // Enhanced toggle between grid and list view
            $('.grid-view').click(function() {
                $('#productGrid').removeClass('d-none').addClass('fade-in');
                $('#productList').addClass('d-none');
                $('.grid-view').addClass('active');
                $('.list-view').removeClass('active');
            });

            $('.list-view').click(function() {
                $('#productList').removeClass('d-none').addClass('fade-in');
                $('#productGrid').addClass('d-none');
                $('.list-view').addClass('active');
                $('.grid-view').removeClass('active');
            });

            // Initialize price slider
            $("#priceSlider").slider({
                range: true,
                min: 0,
                max: 1000,
                values: [0, 1000],
                slide: function(event, ui) {
                    $("#minPrice").val(ui.values[0]);
                    $("#maxPrice").val(ui.values[1]);
                }
            });

            // Enhanced search functionality
            $('#searchInput').on('keyup', function() {
                const value = $(this).val().toLowerCase();
                let visibleCount = 0;

                $('.product-card').each(function() {
                    const productText = $(this).text().toLowerCase();
                    const isVisible = productText.indexOf(value) > -1;

                    $(this).closest('.col-6').toggle(isVisible);
                    if (isVisible) visibleCount++;
                });

                // Show/hide no results message
                const noResults = $('#noResultsMessage');
                if (visibleCount === 0 && value.length > 0) {
                    if (noResults.length === 0) {
                        $('#productGrid').append(`
                            <div class="col-12 text-center py-5" id="noResultsMessage">
                                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">No products found</h4>
                                <p class="text-muted">Try different search terms or browse our categories</p>
                            </div>
                        `);
                    }
                } else {
                    noResults.remove();
                }
            });

            // Enhanced sort functionality
            $('#sortSelect').change(function() {
                const sortValue = $(this).val();
                // Implement enhanced sorting logic here
                console.log('Sort by:', sortValue);
                // Add sorting animation
                $('#productGrid').addClass('sorting');
                setTimeout(() => $('#productGrid').removeClass('sorting'), 500);
            });

            // Wishlist functionality
            $('.wishlist-btn').click(function(e) {
                e.preventDefault();
                const button = $(this);
                const icon = button.find('i');

                if (icon.hasClass('far')) {
                    icon.removeClass('far').addClass('fas text-danger');
                    button.addClass('wishlisted');
                } else {
                    icon.removeClass('fas text-danger').addClass('far');
                    button.removeClass('wishlisted');
                }

                // Add bounce animation
                icon.addClass('bounce');
                setTimeout(() => icon.removeClass('bounce'), 300);
            });

            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function(e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 80
                    }, 800);
                }
            });
        });
    </script>
