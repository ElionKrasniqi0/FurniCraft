@model ShopViewModel
<!-- Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container mb-5">
    <!-- Search and Filter Bar -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-3">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-lg border-end-0"
                                       placeholder="Search for furniture..." id="searchInput">
                                <button class="btn btn-outline-secondary border-start-0 " type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select form-select-lg" id="sortSelect">
                                <option selected>Sort by: Featured</option>
                                <option value="price-asc">Price: Low to High</option>
                                <option value="price-desc">Price: High to Low</option>
                                <option value="newest">Newest Arrivals</option>
                                <option value="popular">Most Popular</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex justify-content-end">
                            <button class="btn btn-outline-secondary btn-lg" type="button" data-bs-toggle="offcanvas"
                                    data-bs-target="#filterOffcanvas">
                                <i class="fas fa-sliders-h me-1"></i> Filters
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Section -->
    <section id="categories" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h4 fw-bold mb-0">Shop by Category</h2>
            <a href="#" class="text-decoration-none small">View all categories <i class="fas fa-chevron-right ms-1"></i></a>
        </div>

        <div class="row g-3">
            @foreach (var cat in Model.Categories.OrderBy(c => c.CatName).Take(6))
            {
                <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                    <a href="/Home/ProductCategory/@cat.CatId" class="text-decoration-none text-dark">
                        <div class="card border-0 h-100 transition-all hover-lift">
                            <div class="card-img-top ratio ratio-1x1 bg-light">
                                <img src="~/category/@cat.CatPhoto" alt="@cat.CatName"
                                     class="img-fluid p-3 object-fit-contain">
                            </div>
                            <div class="card-body text-center p-2">
                                <h6 class="card-title mb-0 small fw-bold">@cat.CatName</h6>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>

    <!-- Featured Products -->
    <section id="featured-products" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h4 fw-bold mb-0">Featured Furniture</h2>
            <div class="d-flex gap-2">
                <a href="/Home/Product" class="btn btn-sm btn-outline-primary">View All</a>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-secondary grid-view active">
                        <i class="fas fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-outline-secondary list-view">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="row g-3" id="productGrid">
            @foreach (var item in Model.Products)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card product-card h-100 border-0 shadow-sm">
                        <div class="badge bg-danger position-absolute top-0 start-0 m-2">Sale</div>
                        <div class="wishlist-btn position-absolute top-0 end-0 m-2">
                            <button class="btn btn-sm btn-light rounded-circle shadow-sm p-1">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                        <a href="/Home/ProductDetailes/@item.ProId" class="product-image-link">
                            <img src="~/Product/@item.ProImage" alt="@item.ProName"
                                 class="card-img-top p-3" style="height: 200px; object-fit: contain;">
                        </a>
                        <div class="card-body p-3">
                            <div class="d-flex flex-column h-100">
                                <div class="mb-2">
                                    <a href="/Home/ProductDetailes/@item.ProId" class="text-decoration-none text-dark">
                                        <h6 class="card-title mb-1 fw-bold">@item.ProName</h6>
                                    </a>
                                    <p class="small text-muted mb-2">@item.Category?.CatName</p>
                                </div>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="fw-bold text-primary">€@item.Price.ToString("N2")</span>
                                            @if (item.Price > 200)
                                            {
                                                <span class="text-muted text-decoration-line-through small ms-1">
                                                    €@((item.Price * 1.2m).ToString("N2"))
                                                </span>
                                            }
                                        </div>
                                        <form class="add-to-cart-form" method="post" action="/Carts/AddToCart">
                                            <input type="hidden" name="ProId" value="@item.ProId" />
                                            <input type="hidden" name="qty" value="1" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary rounded-circle p-1">
                                                <i class="fas fa-shopping-cart"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Product List View (hidden by default) -->
        <div class="row d-none" id="productList">
            @foreach (var item in Model.Products)
            {
                <div class="col-12 mb-3">
                    <div class="card border-0 shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-3">
                                <a href="/Home/ProductDetailes/@item.ProId" class="product-image-link">
                                    <img src="~/Product/@item.ProImage" alt="@item.ProName"
                                         class="img-fluid rounded-start" style="height: 200px; object-fit: cover;">
                                </a>
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <a href="/Home/ProductDetailes/@item.ProId" class="text-decoration-none text-dark">
                                        <h5 class="card-title fw-bold">@item.ProName</h5>
                                    </a>
                                    <p class="small text-muted mb-2">@item.Category?.CatName</p>
                                    <p class="card-text">@item.Descreption</p>
                                    <div class="d-flex align-items-center">
                                        <div class="rating me-2 small text-warning">
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star"></i>
                                            <i class="fas fa-star-half-alt"></i>
                                        </div>
                                        <span class="small text-muted">(24 reviews)</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="card-body h-100 d-flex flex-column justify-content-between">
                                    <div class="text-end">
                                        <div class="fw-bold text-primary fs-4 mb-2">€@item.Price.ToString("N2")</div>
                                        @if (item.Price > 200)
                                        {
                                            <div class="text-muted text-decoration-line-through small">
                                                €@((item.Price * 1.2m).ToString("N2"))
                                            </div>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-end gap-2">
                                        <form class="add-to-cart-form" method="post" action="/Carts/AddToCart">
                                            <input type="hidden" name="ProId" value="@item.ProId" />
                                            <input type="hidden" name="qty" value="1" />
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-shopping-cart me-1"></i> Add to Cart
                                            </button>
                                        </form>
                                        <button class="btn btn-outline-secondary">
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </section>
</div>

<!-- Filter Offcanvas -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="filterOffcanvas">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">Filters</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <!-- Price Filter -->
        <div class="mb-4">
            <h6 class="fw-bold mb-3">Price Range</h6>
            <div id="priceSlider" class="mb-3"></div>
            <div class="d-flex justify-content-between">
                <span class="badge bg-light text-dark">€0</span>
                <span class="badge bg-light text-dark">€1000+</span>
            </div>
            <input type="hidden" id="minPrice" value="0">
            <input type="hidden" id="maxPrice" value="1000">
        </div>

        <!-- Categories Filter -->
        <div class="mb-4">
            <h6 class="fw-bold mb-3">Categories</h6>
            <div class="list-group list-group-flush">
                @foreach (var cat in Model.Categories.OrderBy(c => c.CatName).Take(5))
                {
                    <a href="/Home/ProductCategory/@cat.CatId"
                       class="list-group-item list-group-item-action border-0 px-0 py-2 d-flex justify-content-between align-items-center">
                        @cat.CatName
                        <span class="badge bg-light text-dark">@Model.Products.Count(p => p.CatId == cat.CatId)</span>
                    </a>
                }
                <a href="#" class="list-group-item list-group-item-action border-0 px-0 py-2 text-primary">
                    View all categories
                </a>
            </div>
        </div>

        <!-- Additional Filters -->
        <div class="mb-4">
            <h6 class="fw-bold mb-3">Materials</h6>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="" id="materialWood">
                <label class="form-check-label" for="materialWood">
                    Wood
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="" id="materialMetal">
                <label class="form-check-label" for="materialMetal">
                    Metal
                </label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="" id="materialFabric">
                <label class="form-check-label" for="materialFabric">
                    Fabric
                </label>
            </div>
        </div>

        <div class="d-grid gap-2">
            <button class="btn btn-primary" type="button">Apply Filters</button>
            <button class="btn btn-outline-secondary" type="button">Reset All</button>
        </div>
    </div>
</div>

<!-- Styles -->
<style>


    .product-card {
        transition: all 0.3s ease;
        border-radius: 0.5rem;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .transition-all {
        transition: all 0.3s ease;
    }

    .product-image-link {
        display: block;
        background-color: #f8f9fa;
    }

    .object-fit-contain {
        object-fit: contain;
    }

    .object-fit-cover {
        object-fit: cover;
    }

    .page-item.active .page-link {
        background-color: #3b5d50;
        border-color: #3b5d50;
    }

    .page-link {
        color: #3b5d50;
        min-width: 38px;
        text-align: center;
    }

    .grid-view.active, .list-view.active {
        background-color: #3b5d50;
        color: white;
    }

    .rating {
        color: #ffc107;
    }
</style>

<!-- Scripts -->
@section Scripts {
    <script>
        $(document).ready(function() {
            // Toggle between grid and list view
            $('.grid-view').click(function() {
                $('#productGrid').removeClass('d-none');
                $('#productList').addClass('d-none');
                $('.grid-view').addClass('active');
                $('.list-view').removeClass('active');
            });

            $('.list-view').click(function() {
                $('#productList').removeClass('d-none');
                $('#productGrid').addClass('d-none');
                $('.list-view').addClass('active');
                $('.grid-view').removeClass('active');
            });

            // Initialize price slider
            $("#priceSlider").slider({
                range: true,
                min: 0,
                max: 1000,
                values: [0, 1000],
                slide: function(event, ui) {
                    $("#minPrice").val(ui.values[0]);
                    $("#maxPrice").val(ui.values[1]);
                }
            });

            // Add to cart functionality
            $('.add-to-cart-form').on('submit', function(e) {
                e.preventDefault();
                var form = $(this);
                var button = form.find('button');
                var originalText = button.html();

                button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span>');

                $.ajax({
                    url: form.attr('action'),
                    method: form.attr('method'),
                    data: form.serialize(),
                    success: function(response) {
                        if (response.success) {
                            // Update cart count
                            var currentCount = parseInt($('#cartSummary').text()) || 0;
                            $('#cartSummary').text(currentCount + 1);

                            // Show feedback
                            button.html('<i class="fas fa-check"></i>');
                            setTimeout(function() {
                                button.html(originalText);
                                button.prop('disabled', false);
                            }, 1500);
                        }
                    },
                    error: function() {
                        alert('Error adding to cart');
                        button.html(originalText);
                        button.prop('disabled', false);
                    }
                });
            });

            // Search functionality
            $('#searchInput').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('.product-card').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Sort functionality
            $('#sortSelect').change(function() {
                var sortValue = $(this).val();
                // Implement sorting logic here
                console.log('Sort by:', sortValue);
            });
        });
    </script>
}

