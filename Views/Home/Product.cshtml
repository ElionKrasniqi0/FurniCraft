@model List<Product>

<!-- Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Our Products</h1>
                    <p class="mb-0">Discover our premium collection of handcrafted furniture</p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="~/images/couch.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Product Grid Section -->
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <!-- Filter and Sort Controls -->
        <div class="row mb-5">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <span class="me-3">Filter:</span>
                    <select class="form-select form-select-sm" style="width: 200px;">
                        <option selected>All Categories</option>
                        @foreach (var category in ViewBag.Categories as List<Category> ?? new List<Category>())
                        {
                            <option value="@category.CatId">@category.CatName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="d-flex align-items-center justify-content-md-end">
                    <span class="me-3">Sort by:</span>
                    <select class="form-select form-select-sm" style="width: 200px;">
                        <option selected>Featured</option>
                        <option value="price-asc">Price: Low to High</option>
                        <option value="price-desc">Price: High to Low</option>
                        <option value="name-asc">Name: A-Z</option>
                        <option value="name-desc">Name: Z-A</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="product-card card h-100 border-0 shadow-sm">
                        <!-- Product Badges -->
                        <div class="product-badges">
                            @if (item.Price > 500)
                            {
                                <span class="badge bg-danger">Premium</span>
                            }
                            <span class="badge bg-success">In Stock</span>
                        </div>

                        <!-- Product Image -->
                        <div class="product-image-container">
                            <a href="/Home/ProductDetailes/@item.ProId" class="product-image-link">
                                <img src="~/Product/@item.ProImage" alt="@item.ProName"
                                     class="card-img-top p-3" loading="lazy">
                            </a>
                            <div class="product-actions">
                                <button class="btn-wishlist" title="Add to wishlist">
                                    <i class="far fa-heart"></i>
                                </button>
                                <button class="btn-quickview" title="Quick view">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Product Body -->
                        <div class="card-body">
                            <div class="product-category small text-muted mb-1">
                                @item.Category?.CatName
                            </div>
                            <h5 class="product-title mb-2">
                                <a href="/Home/ProductDetailes/@item.ProId">@item.ProName</a>
                            </h5>

                            <!-- Rating -->
                            <div class="product-rating mb-2">
                                <div class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                </div>
                                <small class="text-muted">(24 reviews)</small>
                            </div>

                            <!-- Price and Add to Cart -->
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="product-price">
                                    <span class="current-price">€@item.Price.ToString("N2")</span>
                                    @if (item.Price > 500)
                                    {
                                        <span class="original-price text-muted text-decoration-line-through">
                                            €@((item.Price * 1.2m).ToString("N2"))
                                        </span>
                                    }
                                </div>
                                <form class="add-to-cart-form" method="post" action="/Carts/AddToCart">
                                    <input type="hidden" name="ProId" value="@item.ProId" />
                                    <input type="hidden" name="qty" value="1" />
                                    <button type="submit" class="btn btn-sm btn-primary btn-add-to-cart">
                                        <i class="fas fa-shopping-cart me-1"></i> Add
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<style>
    /* Product Card Styles */
    .product-card {
        transition: all 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    /* Product Image Container */
    .product-image-container {
        position: relative;
        background-color: #f8f9fa;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-image-link img {
        max-height: 180px;
        width: auto;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image-link img {
        transform: scale(1.05);
    }

    /* Product Badges */
    .product-badges {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 2;
    }

        .product-badges .badge {
            margin-right: 5px;
            font-size: 0.7rem;
            font-weight: 500;
            padding: 4px 8px;
        }

    /* Product Actions */
    .product-actions {
        position: absolute;
        top: 10px;
        right: 10px;
        display: flex;
        flex-direction: column;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .product-actions {
        opacity: 1;
    }

    .product-actions button {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: white;
        border: none;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        color: #333;
        transition: all 0.2s ease;
    }

        .product-actions button:hover {
            background: #3b5d50;
            color: white;
        }

    /* Product Title */
    .product-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 2.8rem;
    }

        .product-title a {
            color: #333;
            text-decoration: none;
        }

            .product-title a:hover {
                color: #3b5d50;
            }

    /* Product Price */
    .product-price {
        display: flex;
        flex-direction: column;
    }

    .current-price {
        font-weight: 700;
        color: #3b5d50;
        font-size: 1.1rem;
    }

    .original-price {
        font-size: 0.8rem;
    }

    /* Product Rating */
    .product-rating {
        display: flex;
        align-items: center;
    }

        .product-rating .stars {
            color: #ffc107;
            margin-right: 5px;
        }

    /* Add to Cart Button */
    .btn-add-to-cart {
        border-radius: 4px;
        padding: 0.35rem 0.75rem;
        font-size: 0.85rem;
        background-color: #3b5d50;
        border-color: #3b5d50;
    }

        .btn-add-to-cart:hover {
            background-color: #2a4238;
            border-color: #2a4238;
        }

    /* Pagination */
    .page-item.active .page-link {
        background-color: #3b5d50;
        border-color: #3b5d50;
    }

    .page-link {
        color: #3b5d50;
    }

    /* Responsive Adjustments */
    @@media (max-width: 767.98px) {
        .product-image-container {
            height: 160px;
        }

        .product-title {
            font-size: 0.9rem;
            height: 2.4rem;
        }

        .current-price {
            font-size: 1rem;
        }
    }
</style>

<script>
    $(document).ready(function() {
        // Add to cart functionality
        $('.add-to-cart-form').on('submit', function(e) {
            e.preventDefault();
            var form = $(this);
            var button = form.find('.btn-add-to-cart');
            var originalText = button.html();

            // Disable button and show loading state
            button.prop('disabled', true)
                 .html('<span class="spinner-border spinner-border-sm me-1"></span>');

            // AJAX request
            $.ajax({
                url: form.attr('action'),
                method: form.attr('method'),
                data: form.serialize(),
                success: function(response) {
                    if (response.success) {
                        // Update cart count
                        var currentCount = parseInt($('#cartSummary').text()) || 0;
                        $('#cartSummary').text(currentCount + 1);

                        // Show success feedback
                        button.html('<i class="fas fa-check me-1"></i>');
                        setTimeout(function() {
                            button.html(originalText).prop('disabled', false);
                        }, 1500);
                    }
                },
                error: function() {
                    // Show error feedback
                    button.html('<i class="fas fa-times me-1"></i>');
                    setTimeout(function() {
                        button.html(originalText).prop('disabled', false);
                    }, 1500);
                }
            });
        });

        // Category filter functionality
        $('select').on('change', function() {
            var categoryId = $(this).val();
            if (categoryId === "All Categories") {
                $('.product-card').show();
            } else {
                $('.product-card').each(function() {
                    // You would need to add data-category-id attribute to each product card
                    // and filter based on that in a real implementation
                    $(this).toggle($(this).data('category-id') == categoryId);
                });
            }
        });

        // Sort functionality
        $('select').on('change', function() {
            var sortValue = $(this).val();
            // Implement sorting logic here based on the selected value
            console.log('Sort by:', sortValue);
        });
    });
</script>
