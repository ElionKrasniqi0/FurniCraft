@model List<Product>

<!-- Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-4">
                <div class="intro-excerpt">
                    <h1>Our <span class="d-block">Products</span></h1>
                    <p class="mb-4">Discover our premium collection of handcrafted furniture</p>
                    <p>
                        <a href="/Home/Product" class="btn btn-secondary me-2">Shop Now</a>
                    </p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="~/images/couch.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Product Grid Section -->
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <!-- Filter and Sort Controls -->
        <div class="row mb-5">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <span class="me-3">Filter:</span>
                    <select class="form-select form-select-sm" style="width: 200px;">
                        <option selected>All Categories</option>
                        @foreach (var category in ViewBag.Categories as List<Category> ?? new List<Category>())
                        {
                            <option value="@category.CatId">@category.CatName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <div class="d-flex align-items-center justify-content-md-end">
                    <span class="me-3">Sort by:</span>
                    <select class="form-select form-select-sm" style="width: 200px;">
                        <option selected>Featured</option>
                        <option value="price-asc">Price: Low to High</option>
                        <option value="price-desc">Price: High to Low</option>
                        <option value="name-asc">Name: A-Z</option>
                        <option value="name-desc">Name: Z-A</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="product-card card h-100 border-0 shadow-sm">
                        <!-- Product Badges -->
                        <div class="product-badges">
                            @if (item.Price > 500)
                            {
                                <span class="badge bg-danger">Premium</span>
                            }
                            <span class="badge bg-success">In Stock</span>
                        </div>

                        <!-- Product Image -->
                        <div class="product-image position-relative overflow-hidden">
                            <a href="/Home/ProductDetailes/@item.ProId" class="product-image-link">
                                <img src="~/Product/@item.ProImage" alt="@item.ProName"
                                     class="card-img-top p-3" style="height: 200px; object-fit: contain;" loading="lazy">
                            </a>
                            <div class="product-actions position-absolute w-100 px-3">
                                <button class="btn btn-dark btn-sm w-100 mb-2 add-to-cart" data-product-id="@item.ProId">
                                    <i class="fas fa-shopping-cart me-1"></i> Add to Cart
                                </button>
                                <button class="btn btn-outline-dark btn-sm w-100 quick-view" data-product-id="@item.ProId">
                                    <i class="fas fa-eye me-1"></i> Quick View
                                </button>
                            </div>
                        </div>

                        <!-- Product Body -->
                        <div class="card-body">
                            <div class="product-category small text-muted mb-1">
                                @item.Category?.CatName
                            </div>
                            <h5 class="product-title mb-2">
                                <a href="/Home/ProductDetailes/@item.ProId">@item.ProName</a>
                            </h5>

                            <!-- Rating -->
                            <div class="product-rating mb-2">
                                <div class="stars">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star-half-alt text-warning"></i>
                                </div>
                                <small class="text-muted">(24 reviews)</small>
                            </div>

                            <!-- Price -->
                            <div class="product-price">
                                <span class="current-price fw-bold">€@item.Price.ToString("N2")</span>
                                @if (item.Price > 500)
                                {
                                    <span class="original-price text-muted text-decoration-line-through small ms-1">
                                        €@((item.Price * 1.2m).ToString("N2"))
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

<!-- Quick View Modal -->
<div class="modal fade" id="quickViewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Product Quick View</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="quickViewContent">
                <!-- Content will be loaded via AJAX -->
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add to Cart Toast Notification -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="addToCartToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Notification</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Product added to cart!
        </div>
    </div>
</div>

<style>
    /* Product Card Styles */
    .product-card {
        transition: all 0.3s ease;
        border-radius: 8px;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    /* Product Image */
    .product-image {
        height: 200px;
        background-color: #f9f9f9;
    }

        .product-image img {
            height: 100%;
            width: 100%;
            object-fit: contain;
            padding: 20px;
            transition: all 0.3s ease;
        }

    .product-card:hover .product-image img {
        transform: scale(1.05);
    }

    /* Product Actions */
    .product-actions {
        bottom: -100%;
        transition: all 0.3s ease;
    }

    .product-card:hover .product-actions {
        bottom: 15px;
    }

    /* Product Badges */
    .product-badges {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 2;
    }

        .product-badges .badge {
            margin-right: 5px;
            font-size: 0.7rem;
            font-weight: 500;
            padding: 4px 8px;
        }

    /* Product Title */
    .product-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 2.8rem;
    }

        .product-title a {
            color: #333;
            text-decoration: none;
        }

            .product-title a:hover {
                color: #3b5d50;
            }

    /* Product Price */
    .current-price {
        color: #3b5d50;
        font-size: 1.1rem;
    }

    .original-price {
        font-size: 0.8rem;
    }

    /* Product Rating */
    .product-rating .stars {
        color: #ffc107;
    }

   
        /* Pagination */
        .page-item.active .page-link {
            background-color: #3b5d50;
            border-color: #3b5d50;
        }

        .page-link {
            color: #3b5d50;
        }

        /* Responsive Adjustments */
        @@media (max-width: 767.98px) {
            .product-image-container {
                height: 160px;
            }

            .product-title {
                font-size: 0.9rem;
                height: 2.4rem;
            }

            .current-price {
                font-size: 1rem;
            }
        }
</style>

<script>
    $(document).ready(function() {
        // Add to Cart functionality
        $('.add-to-cart').click(function(e) {
            e.preventDefault();
            const productId = $(this).data('product-id');
            const button = $(this);

            // Show loading state
            button.html('<span class="spinner-border spinner-border-sm"></span>');
            button.prop('disabled', true);

            $.ajax({
                url: '/Carts/AddToCart',
                type: 'POST',
                data: {
                    ProId: productId,
                    qty: 1
                },
                success: function(response) {
                    if (response.success) {
                        // Update cart count in navbar
                        var currentCount = parseInt($('#cartSummary').text()) || 0;
                        $('#cartSummary').text(currentCount + 1);

                        // Show toast notification
                        var toast = new bootstrap.Toast(document.getElementById('addToCartToast'));
                        toast.show();

                        // Show success feedback
                        button.html('<i class="fas fa-check"></i> Added');
                        setTimeout(function() {
                            button.html('<i class="fas fa-shopping-cart me-1"></i> Add to Cart');
                            button.prop('disabled', false);
                        }, 1500);
                    } else {
                        if (response.redirectUrl) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert(response.message || 'Failed to add to cart');
                            button.html('<i class="fas fa-shopping-cart me-1"></i> Add to Cart');
                            button.prop('disabled', false);
                        }
                    }
                },
                error: function() {
                    alert('An error occurred while adding to cart');
                    button.html('<i class="fas fa-shopping-cart me-1"></i> Add to Cart');
                    button.prop('disabled', false);
                }
            });
        });

        // Quick View functionality
        $('.quick-view').click(function(e) {
            e.preventDefault();
            const productId = $(this).data('product-id');
            const modal = new bootstrap.Modal(document.getElementById('quickViewModal'));

            // Load product details via AJAX
            $.ajax({
                url: '/Home/ProductQuickView',
                type: 'GET',
                data: { id: productId },
                beforeSend: function() {
                    $('#quickViewContent').html(`
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    `);
                },
                success: function(response) {
                    $('#quickViewContent').html(response);
                    modal.show();

                    // Initialize quantity controls in the modal
                    $('.quantity-minus').click(function() {
                        var input = $(this).parent().find('input');
                        var value = parseInt(input.val());
                        if (value > 1) {
                            input.val(value - 1);
                        }
                    });

                    $('.quantity-plus').click(function() {
                        var input = $(this).parent().find('input');
                        var value = parseInt(input.val());
                        if (value < 10) {
                            input.val(value + 1);
                        }
                    });

                    // Handle add to cart in modal
                    $('#modalAddToCart').click(function() {
                        const qty = $('#quickViewQuantity').val();
                        const button = $(this);
                        const originalText = button.html();

                        button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span>');

                        $.ajax({
                            url: '/Carts/AddToCart',
                            type: 'POST',
                            data: {
                                ProId: productId,
                                qty: qty
                            },
                            success: function(response) {
                                if (response.success) {
                                    // Update cart count
                                    var currentCount = parseInt($('#cartSummary').text()) || 0;
                                    $('#cartSummary').text(currentCount + parseInt(qty));

                                    // Close modal
                                    modal.hide();

                                    // Show toast notification
                                    var toast = new bootstrap.Toast(document.getElementById('addToCartToast'));
                                    toast.show();
                                } else {
                                    if (response.redirectUrl) {
                                        window.location.href = response.redirectUrl;
                                    } else {
                                        alert(response.message || 'Failed to add to cart');
                                    }
                                }
                            },
                            error: function() {
                                alert('An error occurred while adding to cart');
                            }
                        });
                    });
                },
                error: function() {
                    $('#quickViewContent').html(`
                        <div class="alert alert-danger">
                            Failed to load product details. Please try again.
                        </div>
                    `);
                    modal.show();
                }
            });
        });

        // Category filter functionality
        $('select').on('change', function() {
            var categoryId = $(this).val();
            if (categoryId === "All Categories") {
                $('.product-card').parent().show();
            } else {
                $('.product-card').each(function() {
                    // You would need to add data-category-id attribute to each product card
                    // and filter based on that in a real implementation
                    $(this).closest('.col-12').toggle($(this).find('.product-category').text().includes(categoryId));
                });
            }
        });

        // Sort functionality
        $('select').on('change', function() {
            var sortValue = $(this).val();
            // Implement sorting logic here based on the selected value
            console.log('Sort by:', sortValue);
        });
    });
</script>