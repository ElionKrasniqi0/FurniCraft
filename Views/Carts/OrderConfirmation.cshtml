@model Order

<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Order Confirmation</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>

<div class="untree_co-section">
    <div class="container">
        <!-- Email Sent Notification -->
        @if (TempData["EmailSent"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["EmailSent"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row">
            <div class="col-md-12 text-center pt-5">
                <span class="display-3 thankyou-icon text-primary">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-check mb-5" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M11.354 5.646a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L8 8.293l2.646-2.647a.5.5 0 0 1 .708 0z" />
                        <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                    </svg>
                </span>
                <h2 class="display-3 text-black">Thank you!</h2>
                <p class="lead mb-5">You order was successfully completed.</p>

                <!-- Order Details -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="text-primary">Order #@Model.OrderId</h4>
                        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                        <p><strong>Total Amount:</strong> €@Model.TotalAmount.ToString("N2")</p>
                        <p><strong>Shipping To:</strong> @Model.ShippingAddress, @Model.City</p>

                        @if (!string.IsNullOrEmpty(Model.Comment))
                        {
                            <p><strong>Order Notes:</strong> @Model.Comment</p>
                        }
                    </div>
                </div>

                <p class="text-muted mb-4">
                    <i class="fas fa-envelope text-primary me-2"></i>
                    A confirmation email has been sent to your email address with all order details.
                </p>

                <div class="d-flex justify-content-center gap-3">
                    <a href="/Home/Product" class="btn btn-primary btn-outline-black">Continue Shopping</a>
                    <a href="/Orders" class="btn btn-outline-primary">View My Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>
