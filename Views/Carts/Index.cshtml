@model ShoppingCartDetails

<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Cart</h1>
                </div>
            </div>
            <div class="col-lg-7">
                <!-- Additional content can go here -->
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                @if (Model.IsEmpty)
                {
                    <div class="alert alert-info" role="alert">
                        Your cart is empty. <a href="/Home/Product">Continue shopping</a> to add products.
                    </div>
                }
                else
                {
                    <div class="site-blocks-table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="cart-items">
                                @foreach (var item in Model.Carts)
                                {
                                    <tr id="cart-item-@item.CartId" class="cart-item-row">
                                        <td class="align-middle">
                                            <img src="~/Product/@item.Product.ProImage" style="width: 100px; height: auto;" />
                                        </td>
                                        <td class="align-middle">@item.Product.ProName</td>
                                        <td class="align-middle">€@item.Product.Price</td>
                                        <td class="align-middle">@item.Qty</td>
                                        <td class="align-middle">€@(item.Product.Price * item.Qty)</td>
                                        <td class="align-middle">
                                            <button class="btn btn-danger remove-item btn-sm"
                                                    data-cart-id="@item.CartId">
                                                Remove
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
        @if (!Model.IsEmpty)
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="row mb-5">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <button class="btn btn-black btn-sm btn-block">Update Cart</button>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-outline-black btn-sm btn-block">Continue Shopping</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label class="text-black h4" for="coupon">Coupon</label>
                            <p>Enter your coupon code if you have one.</p>
                        </div>
                        <div class="col-md-8 mb-3 mb-md-0">
                            <input type="text" class="form-control py-3" id="coupon" placeholder="Coupon Code">
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-black">Apply Coupon</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 pl-5">
                    <div class="row justify-content-end">
                        <div class="col-md-7">
                            <div class="row">
                                <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <span class="text-black">Subtotal</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">€@Model.TotalAmount</strong>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-6">
                                <span class="text-black">Total</span>
                            </div>
                            <div class="col-md-6 text-right">
                                <strong class="text-black">€@Model.TotalAmount</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <a asp-action="Checkout" class="btn btn-black btn-lg py-3 btn-block">Proceed To Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <style>
        .cart-item-row {
            transition: all 0.3s ease;
        }

        .removing {
            opacity: 0;
            height: 0;
            padding: 0;
            margin: 0;
            border: none;
            overflow: hidden;
        }
    </style>

    <script>
        $(document).ready(function() {
            // Remove item from cart
            $(document).on('click', '.remove-item', function(e) {
                e.preventDefault();
                const cartId = $(this).data('cart-id');
                const button = $(this);
                const row = $(`#cart-item-${cartId}`);

                // Disable all remove buttons during operation
                $('.remove-item').prop('disabled', true);
                button.html('<span class="spinner-border spinner-border-sm"></span>');

                // Add removing class to start transition
                row.addClass('removing');

                $.ajax({
                    url: '/Carts/RemoveFromCart',
                    type: 'POST',
                    data: { cartId: cartId },
                    success: function(response) {
                        // Wait for CSS transition to complete before removing
                        setTimeout(function() {
                            row.remove();

                            // Update totals if needed
                            if (response.newTotal !== undefined) {
                                $('#cart-subtotal').text('€' + response.newTotal.toFixed(2));
                                $('#cart-total').text('€' + response.newTotal.toFixed(2));
                            }

                            // Update cart count in navbar
                            if (response.itemCount !== undefined) {
                                $('#cartSummary').text(response.itemCount);
                            }

                            // Check if cart is empty
                            if ($('#cart-items tr').length === 0) {
                                $('.site-blocks-table').replaceWith(
                                    '<div class="alert alert-info" role="alert">' +
                                    'Your cart is empty. <a href="/Home/Product">Continue shopping</a> to add products.' +
                                    '</div>'
                                );
                                $('.row:has(#cart-items)').next().remove();
                            }

                            // Re-enable buttons
                            $('.remove-item').prop('disabled', false);
                        }, 300); // Match this with CSS transition duration
                    },
                    error: function() {
                        alert('Error removing item from cart');
                        row.removeClass('removing');
                        button.html('Remove');
                        $('.remove-item').prop('disabled', false);
                    }
                });
            });
        });
    </script>
}