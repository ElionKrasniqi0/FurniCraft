@model Order
<br />
<br />
<br />
<br />
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-800">Order Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Orders</a></li>
                    <li class="breadcrumb-item active">#@Model.OrderId</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Orders
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Order Summary Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small mb-1">Order ID</label>
                                <p class="fw-bold mb-0">#@Model.OrderId</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small mb-1">Order Date</label>
                                <p class="mb-0">@Model.OrderDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small mb-1">Customer</label>
                                <p class="mb-0">@Model.User.UserName</p>
                                <small class="text-muted">@Model.User.Email</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label text-muted small mb-1">Total Amount</label>
                                <p class="h5 text-success fw-bold mb-0">@Model.TotalAmount.ToString("C")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small mb-1">Status</label>
                                <div>
                                    <span class="badge bg-success bg-opacity-10 text-success">
                                        <i class="fas fa-check-circle me-1"></i>Completed
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Items Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Order Items</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0">Product</th>
                                    <th class="border-0">Price</th>
                                    <th class="border-0">Quantity</th>
                                    <th class="border-0 text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="flex-shrink-0">
                                                    <img src="~/Product/@item.Product.ProImage"
                                                         alt="@item.Product.ProName"
                                                         class="rounded"
                                                         style="width: 50px; height: 50px; object-fit: cover;">
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">@item.Product.ProName</h6>
                                                    <small class="text-muted">@item.Product.Category?.CatName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-end fw-bold">@((item.Price * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Subtotal:</td>
                                    <td class="text-end fw-bold">@Model.TotalAmount.ToString("C")</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Shipping:</td>
                                    <td class="text-end text-success">Free</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Total:</td>
                                    <td class="text-end fw-bold text-success">@Model.TotalAmount.ToString("C")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Shipping Information Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Shipping Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label text-muted small mb-1">Shipping Address</label>
                        <p class="mb-0">@Model.ShippingAddress</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small mb-1">City</label>
                        <p class="mb-0">@Model.City</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small mb-1">Phone Number</label>
                        <p class="mb-0">@Model.PhoneNumber</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Comment))
                    {
                        <div class="mb-3">
                            <label class="form-label text-muted small mb-1">Customer Comment</label>
                            <p class="mb-0 text-muted">@Model.Comment</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">Order Actions</h5>
                </div>
                <div class="card-body">
                    <form asp-action="DeleteOrder" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this order? This action cannot be undone.')">
                        <input type="hidden" name="id" value="@Model.OrderId" />
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-trash me-2"></i>Delete Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
