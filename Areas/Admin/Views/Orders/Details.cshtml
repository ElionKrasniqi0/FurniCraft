@model Order

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Order Details</h3>
                    </div>
                    <div class="card-body">
                        <h4>Order ID: @Model.OrderId</h4>
                        <p>User: @Model.User.UserName</p>
                        <p>Order Date: @Model.OrderDate</p>
                        <p>Total Amount: €@Model.TotalAmount</p>
                        <p>Shipping Address: @Model.ShippingAddress</p>
                        <p>City: @Model.City</p>
                        <p>Phone Number: @Model.PhoneNumber</p>
                        <p>Comment: @Model.Comment</p>

                        <h4>Order Items</h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@item.Product.ProName</td>
                                        <td>@item.Quantity</td>
                                        <td>€@item.Price</td>
                                        <td>€@(item.Price * item.Quantity)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Delete Button -->
                        <form asp-action="DeleteOrder" asp-controller="Orders" asp-area="Admin" asp-route-id="@Model.OrderId" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Delete Order
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
