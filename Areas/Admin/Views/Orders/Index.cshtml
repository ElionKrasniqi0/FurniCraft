@model List<Order>

<div class="container mt-4">
    <h2>All Orders</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.User?.Email</td>
                    <td>@order.OrderDate.ToString("d")</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>Completed</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId"
                           class="btn btn-sm btn-info">Details</a>
                        <form asp-action="DeleteOrder" method="post" onsubmit="return confirm('Are you sure?');" class="d-inline">
                            <input type="hidden" name="id" value="@order.OrderId" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>