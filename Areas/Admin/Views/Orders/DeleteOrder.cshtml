@foreach (var order in Model.Orders)
{
    <div class="card mb-3" id="order-@order.OrderId">
        <div class="card-body">
            <h5 class="card-title">Order ID: @order.OrderId</h5>
            <p class="card-text">User: @order.User.UserName</p>
            <p class="card-text">Total Amount: €@order.TotalAmount</p>
            <p class="card-text"><small class="text-muted">Order Date: @order.OrderDate.ToString("yyyy-MM-dd HH:mm")</small></p>
            <!-- Delete Button -->
            <button type="button" class="btn btn-danger btn-sm delete-order" data-id="@order.OrderId">
                <i class="fa fa-trash"></i> Delete
            </button>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle delete button click
            $('.delete-order').on('click', function () {
                var orderId = $(this).data('id');
                if (confirm('Are you sure you want to delete this order?')) {
                    $.post('/Admin/DeleteOrder', { id: orderId }, function (response) {
                        if (response.success) {
                            $('#order-' + orderId).remove(); // Remove the order card from the DOM
                        } else {
                            alert('Failed to delete the order.');
                        }
                    }).fail(function () {
                        alert('An error occurred. Please try again.');
                    });
                }
            });
        });
    </script>
}
