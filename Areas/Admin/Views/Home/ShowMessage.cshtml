@section Scripts {
    <script>
        // Initialize DataTable
        $(document).ready(function() {
            $('#messagesTable').DataTable({
                "pageLength": 25,
                "responsive": true,
                "language": {
                    "search": "Search messages:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ messages",
                    "infoEmpty": "Showing 0 to 0 of 0 messages",
                    "infoFiltered": "(filtered from _MAX_ total messages)",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": [4] }
                ]
            });

            // Search functionality
            $('#searchInput').on('keyup', function() {
                $('#messagesTable').DataTable().search(this.value).draw();
            });
        });

        // Set up modal handlers
        document.addEventListener('DOMContentLoaded', function() {
            const messageModal = document.getElementById('messageModal');
            const replyModal = document.getElementById('replyModal');

            // View Message Modal
            messageModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const name = button.getAttribute('data-name');
                const email = button.getAttribute('data-email');
                const subject = button.getAttribute('data-subject');
                const message = button.getAttribute('data-message');

                document.getElementById('modalMessageId').textContent = `#${id}`;
                document.getElementById('modalUserName').textContent = name;
                document.getElementById('modalUserEmail').textContent = email;
                document.getElementById('modalSubject').textContent = subject || 'No subject';
                document.getElementById('modalMessage').textContent = message || 'No message content';

                // Store data for reply button
                document.getElementById('replyFromView').setAttribute('data-id', id);
                document.getElementById('replyFromView').setAttribute('data-email', email);
                document.getElementById('replyFromView').setAttribute('data-subject', subject);
                document.getElementById('replyFromView').setAttribute('data-name', name);
            });

            // Reply from View Message
            document.getElementById('replyFromView').addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                const email = this.getAttribute('data-email');
                const subject = this.getAttribute('data-subject');
                const name = this.getAttribute('data-name');

                // Set reply modal values
                document.getElementById('replyMessageId').value = id;
                document.getElementById('replyToEmail').value = email;
                document.getElementById('replyCustomerName').value = name;
                document.getElementById('replySubject').value = subject ? `Re: ${subject}` : 'Re: Your Message';

                // Close view modal and open reply modal
                bootstrap.Modal.getInstance(messageModal).hide();
                bootstrap.Modal.getInstance(replyModal).show();
            });

            // Reply Modal Handler
            document.getElementById('replyModal').addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const id = button.getAttribute('data-id');
                const email = button.getAttribute('data-email');
                const subject = button.getAttribute('data-subject');
                const name = button.getAttribute('data-name');

                document.getElementById('replyMessageId').value = id;
                document.getElementById('replyToEmail').value = email;
                document.getElementById('replyCustomerName').value = name;
                document.getElementById('replySubject').value = subject ? `Re: ${subject}` : 'Re: Your Message';
                document.getElementById('replyMessage').value = ''; // Clear previous message
            });

            // Send Reply
            document.getElementById('sendReply').addEventListener('click', function() {
                const messageId = document.getElementById('replyMessageId').value;
                const replySubject = document.getElementById('replySubject').value;
                const replyMessage = document.getElementById('replyMessage').value;

                // Validation
                if (!replySubject.trim()) {
                    showToast('Error', 'Please enter a subject for your reply.', 'danger');
                    return;
                }

                if (!replyMessage.trim()) {
                    showToast('Error', 'Please enter your reply message.', 'danger');
                    return;
                }

                const sendButton = this;
                const originalText = sendButton.innerHTML;
                sendButton.disabled = true;
                sendButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Sending...';

                // Create form data
                const formData = new FormData();
                formData.append('id', messageId);
                formData.append('replySubject', replySubject);
                formData.append('replyMessage', replyMessage);

                fetch('/Admin/Home/SendReply', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('Success', data.message, 'success');
                        // Close the modal
                        bootstrap.Modal.getInstance(replyModal).hide();
                        // Clear the form
                        document.getElementById('replyForm').reset();
                    } else {
                        showToast('Error', data.message, 'danger');
                    }
                })
                .catch(error => {
                    showToast('Error', 'Failed to send reply. Please try again.', 'danger');
                    console.error('Error sending reply:', error);
                })
                .finally(() => {
                    sendButton.disabled = false;
                    sendButton.innerHTML = originalText;
                });
            });

            // Delete Message
            document.querySelectorAll('.delete-message').forEach(button => {
                button.addEventListener('click', function() {
                    const messageId = this.getAttribute('data-id');
                    const customerName = this.getAttribute('data-name');

                    if (confirm(`Are you sure you want to delete the message from ${customerName}? This action cannot be undone.`)) {
                        const deleteButton = this;
                        const originalText = deleteButton.innerHTML;
                        deleteButton.disabled = true;
                        deleteButton.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';

                        fetch('/Admin/Home/DeleteMessage', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            },
                            body: `id=${messageId}`
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                showToast('Success', data.message, 'success');
                                // Remove the row from table
                                document.getElementById(`message-${messageId}`).remove();

                                // Check if table is empty
                                if (document.querySelectorAll('#messagesTable tbody tr').length === 0) {
                                    location.reload(); // Reload to show empty state
                                }
                            } else {
                                showToast('Error', data.message, 'danger');
                                deleteButton.disabled = false;
                                deleteButton.innerHTML = originalText;
                            }
                        })
                        .catch(error => {
                            showToast('Error', 'Failed to delete message. Please try again.', 'danger');
                            deleteButton.disabled = false;
                            deleteButton.innerHTML = originalText;
                        });
                    }
                });
            });

            // Row click to view message
            document.querySelectorAll('#messagesTable tbody tr').forEach(row => {
                row.addEventListener('click', function(e) {
                    if (!e.target.closest('button')) {
                        const viewButton = this.querySelector('.view-message');
                        if (viewButton) {
                            viewButton.click();
                        }
                    }
                });
            });
        });

        // Utility Functions
        function showToast(title, message, type = 'info') {
            const toast = document.getElementById('liveToast');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');

            // Set toast style based on type
            const bgClass = type === 'success' ? 'bg-success' : type === 'danger' ? 'bg-danger' : 'bg-info';
            toast.className = `toast ${bgClass} text-white`;

            toastTitle.textContent = title;
            toastMessage.textContent = message;

            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        }

        function exportMessages() {
            showToast('Info', 'Export functionality would be implemented here.', 'info');
        }

        function refreshMessages() {
            location.reload();
        }
    </script>
}
