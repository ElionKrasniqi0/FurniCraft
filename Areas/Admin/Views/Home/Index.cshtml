@using FurniCraft.Areas.Admin.ViewModel
@using FurniCraft.Enum
@model IEnumerable<Users_In_Role_ViewModel>

@{
    ViewBag.Title = "User Management";
}
<br />
<br />
<br />
<br />
<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1 text-gray-800">User Management</h1>
            <p class="text-muted">Manage users, roles, and account permissions</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary">
                <i class="fas fa-download me-2"></i>Export
            </button>
            <button class="btn btn-outline-secondary">
                <i class="fas fa-sync-alt me-2"></i>Refresh
            </button>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary bg-opacity-10 border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h4 class="mb-0">@Model.Count()</h4>
                            <p class="text-muted mb-0">Total Users</p>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-users fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success bg-opacity-10 border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h4 class="mb-0">@Model.Count(u => !u.IsLocked)</h4>
                            <p class="text-muted mb-0">Active Users</p>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-user-check fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning bg-opacity-10 border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h4 class="mb-0">@Model.Count(u => u.IsLocked)</h4>
                            <p class="text-muted mb-0">Locked Users</p>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-user-lock fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info bg-opacity-10 border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h4 class="mb-0">@Model.Count(u => u.Roles.Contains("Admin"))</h4>
                            <p class="text-muted mb-0">Administrators</p>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="fas fa-user-shield fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0">All Users</h5>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search users..." id="searchInput">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="usersTable">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">User</th>
                            <th class="border-0">Email</th>
                            <th class="border-0">Roles</th>
                            <th class="border-0">Status</th>
                            <th class="border-0 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@user.UserName</div>
                                            <small class="text-muted">ID: @user.UserId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <div class="d-flex flex-wrap gap-1">
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25">
                                                @role
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (user.IsLocked)
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger">
                                            <i class="fas fa-lock me-1"></i>Locked
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">
                                            <i class="fas fa-check-circle me-1"></i>Active
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-cog"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow">
                                            <li>
                                                <a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="EditRole" asp-route-UserId="@user.UserId">
                                                    <i class="fas fa-user-shield me-2"></i>Manage Roles
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            @if (!user.IsLocked)
                                            {
                                                <li>
                                                    <a class="dropdown-item text-warning" href="#"
                                                       data-bs-toggle="modal" data-bs-target="#lockUserModal"
                                                       data-user-id="@user.UserId" data-user-name="@user.UserName">
                                                        <i class="fas fa-lock me-2"></i>Lock User
                                                    </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a class="dropdown-item text-success" href="#"
                                                       data-bs-toggle="modal" data-bs-target="#unlockUserModal"
                                                       data-user-id="@user.UserId" data-user-name="@user.UserName">
                                                        <i class="fas fa-unlock me-2"></i>Unlock User
                                                    </a>
                                                </li>
                                            }
                                            <li>
                                                <a class="dropdown-item text-danger" href="#"
                                                   data-bs-toggle="modal" data-bs-target="#deleteUserModal"
                                                   data-user-id="@user.UserId" data-user-name="@user.UserName">
                                                    <i class="fas fa-trash me-2"></i>Delete User
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">Showing <strong>@Model.Count()</strong> users</p>
                </div>
                <div class="col-md-6">
                    <nav class="d-flex justify-content-end">
                        <ul class="pagination mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Previous</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteUserModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete User
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="avatar-lg bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-user-slash fa-2x"></i>
                    </div>
                    <h5 class="fw-bold" id="deleteUserName">User Name</h5>
                    <p class="text-muted">This action cannot be undone. All user data will be permanently deleted.</p>
                </div>
                <div class="alert alert-warning border-0">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="fw-bold">Warning:</small>
                            <small class="d-block">Deleting this user will remove all associated data including orders, preferences, and account information.</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteUserForm" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Lock User Modal -->
<div class="modal fade" id="lockUserModal" tabindex="-1" aria-labelledby="lockUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="lockUserModalLabel">
                    <i class="fas fa-lock me-2"></i>Lock User Account
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="avatar-lg bg-warning bg-opacity-10 text-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-user-lock fa-2x"></i>
                    </div>
                    <h5 class="fw-bold" id="lockUserName">User Name</h5>
                    <p class="text-muted">This user will be unable to access their account until unlocked.</p>
                </div>
                <div class="alert alert-info border-0">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-info-circle text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <small class="fw-bold">Note:</small>
                            <small class="d-block">Locking this account prevents login but preserves all user data.</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="lockUserForm" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-lock me-2"></i>Lock Account
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Unlock User Modal -->
<div class="modal fade" id="unlockUserModal" tabindex="-1" aria-labelledby="unlockUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="unlockUserModalLabel">
                    <i class="fas fa-unlock me-2"></i>Unlock User Account
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="avatar-lg bg-success bg-opacity-10 text-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3">
                        <i class="fas fa-user-check fa-2x"></i>
                    </div>
                    <h5 class="fw-bold" id="unlockUserName">User Name</h5>
                    <p class="text-muted">This user will regain access to their account immediately.</p>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="unlockUserForm" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-unlock me-2"></i>Unlock Account
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .avatar-sm {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .avatar-lg {
            width: 80px;
            height: 80px;
            font-size: 2rem;
        }

        .table th {
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        .dropdown-toggle::after {
            margin-left: 0.5em;
        }

        .modal-header {
            border-bottom: none;
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: none;
            padding: 1.5rem;
        }

        .alert {
            border: none;
            border-radius: 0.5rem;
        }

        /* Hover effects */
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .table-hover tbody tr:hover {
            background-color: rgba(59, 93, 80, 0.02);
        }
    </style>
}

@section Scripts {
    <script>
        // Initialize DataTable
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "pageLength": 25,
                "responsive": true,
                "language": {
                    "search": "Search users:",
                    "lengthMenu": "Show _MENU_ entries",
                    "info": "Showing _START_ to _END_ of _TOTAL_ users",
                    "infoEmpty": "Showing 0 to 0 of 0 users",
                    "infoFiltered": "(filtered from _MAX_ total users)",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Previous"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": [4] } // Disable sorting for actions column
                ]
            });

            // Search functionality
            $('#searchInput').on('keyup', function() {
                $('#usersTable').DataTable().search(this.value).draw();
            });
        });

        // Modal handlers
        document.addEventListener('DOMContentLoaded', function() {
            // Delete User Modal
            const deleteUserModal = document.getElementById('deleteUserModal');
            deleteUserModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');

                const modalTitle = deleteUserModal.querySelector('#deleteUserName');
                const form = deleteUserModal.querySelector('#deleteUserForm');

                modalTitle.textContent = userName;
                form.setAttribute('action', '/Admin/Home/DeleteUser?UserId=' + userId);
            });

            // Lock User Modal
            const lockUserModal = document.getElementById('lockUserModal');
            lockUserModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');

                const modalTitle = lockUserModal.querySelector('#lockUserName');
                const form = lockUserModal.querySelector('#lockUserForm');

                modalTitle.textContent = userName;
                form.setAttribute('action', '/Admin/Home/LockUser?UserId=' + userId);
            });

            // Unlock User Modal
            const unlockUserModal = document.getElementById('unlockUserModal');
            unlockUserModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');

                const modalTitle = unlockUserModal.querySelector('#unlockUserName');
                const form = unlockUserModal.querySelector('#unlockUserForm');

                modalTitle.textContent = userName;
                form.setAttribute('action', '/Admin/Home/UnlockUser?UserId=' + userId);
            });

            // Toast notification function
            function showToast(message, type = 'info') {
                // You can integrate a toast library like Toastr here
                console.log(`${type.toUpperCase()}: ${message}`);
            }
        });
    </script>
}
