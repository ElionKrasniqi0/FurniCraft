@model Category
<br />
<br />
<br />
<br />
<div class="container-fluid px-4">
    <!-- Enhanced Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Categories</a></li>
                    <li class="breadcrumb-item active">Create New</li>
                </ol>
            </nav>
            <h1 class="h3 mb-1 text-gray-800">Create New Category</h1>
            <p class="text-muted mb-0">Add a new product category to organize your inventory</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Enhanced Card with Progress Steps -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-4 border-bottom">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="fas fa-plus-circle text-primary fa-lg"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1 text-primary">Category Information</h5>
                            <p class="text-muted mb-0">Fill in the details below to create a new category</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate id="categoryForm">
                        <!-- Category Name with Character Counter -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <label asp-for="CatName" class="form-label fw-semibold">
                                    Category Name <span class="text-danger">*</span>
                                </label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fas fa-tag text-muted"></i>
                                    </span>
                                    <input asp-for="CatName"
                                           class="form-control ps-0"
                                           placeholder="Enter category name (e.g., Living Room, Bedroom, Office)"
                                           maxlength="100"
                                           required
                                           id="categoryName">
                                    <div class="position-relative w-100">
                                        <div class="form-text text-end">
                                            <span id="charCount">0</span>/100 characters
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="CatName" class="text-danger small mt-1"></span>
                                <div class="form-text">
                                    <i class="fas fa-lightbulb text-warning me-1"></i>
                                    Choose a descriptive name that helps customers find products easily
                                </div>
                            </div>
                        </div>

                        <!-- Enhanced Image Upload Section -->
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <label class="form-label fw-semibold d-flex align-items-center">
                                    <span>Category Image</span>
                                    <span class="badge bg-secondary ms-2">Optional</span>
                                </label>

                                <!-- Drag & Drop Upload Area -->
                                <div class="file-upload-area border-2 border-dashed rounded-3 p-4 text-center mb-3"
                                     id="dropZone"
                                     ondrop="handleDrop(event)"
                                     ondragover="handleDragOver(event)"
                                     ondragleave="handleDragLeave(event)">
                                    <div class="file-upload-placeholder">
                                        <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">Drag & drop your image here</h5>
                                        <p class="text-muted mb-3">or click to browse</p>
                                        <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('categoryImage').click()">
                                            <i class="fas fa-search me-2"></i>Browse Files
                                        </button>
                                    </div>
                                </div>

                                <!-- Hidden File Input -->
                                <input type="file"
                                       name="File"
                                       asp-for="File"
                                       class="form-control d-none"
                                       accept="image/*"
                                       onchange="handleFileSelect(this)"
                                       id="categoryImage">

                                <!-- Upload Guidelines -->
                                <div class="upload-info">
                                    <div class="row text-center">
                                        <div class="col-md-4">
                                            <div class="border-end pe-3">
                                                <small class="fw-semibold text-muted">Format</small>
                                                <p class="mb-0 small">JPG, PNG, GIF</p>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="border-end pe-3">
                                                <small class="fw-semibold text-muted">Size</small>
                                                <p class="mb-0 small">Max 2MB</p>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="fw-semibold text-muted">Dimensions</small>
                                            <p class="mb-0 small">500×500px</p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Image Preview -->
                                <div class="image-preview-container mt-4 d-none" id="imagePreviewContainer">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body text-center">
                                            <div class="mb-3 position-relative d-inline-block">
                                                <img id="imagePreview"
                                                     class="img-fluid rounded shadow-sm"
                                                     style="max-height: 200px; max-width: 200px; object-fit: contain;"
                                                     alt="Category image preview">
                                                <button type="button"
                                                        class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 rounded-circle"
                                                        style="width: 32px; height: 32px;"
                                                        onclick="clearImagePreview()">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                            <div class="file-info small text-muted" id="fileInfo"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row mt-5 pt-4 border-top">
                            <div class="col-md-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="addAnother" checked>
                                            <label class="form-check-label small text-muted" for="addAnother">
                                                Add another category after this
                                            </label>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                            <i class="fas fa-times me-2"></i>Cancel
                                        </a>
                                        <button type="submit" class="btn btn-primary px-4" id="submitBtn">
                                            <i class="fas fa-plus me-2"></i>Create Category
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Tips Card -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-light py-3">
                    <h6 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-lightbulb text-warning me-2"></i>Best Practices for Categories
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0 text-success">
                                    <i class="fas fa-check-circle me-2"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <small class="fw-semibold">Clear & Descriptive Names</small>
                                    <small class="d-block text-muted">Use names that clearly describe the product type</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0 text-success">
                                    <i class="fas fa-check-circle me-2"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <small class="fw-semibold">High-Quality Images</small>
                                    <small class="d-block text-muted">Use clear, professional product photos</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0 text-success">
                                    <i class="fas fa-check-circle me-2"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <small class="fw-semibold">Avoid Duplication</small>
                                    <small class="d-block text-muted">Ensure categories don't overlap</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex">
                                <div class="flex-shrink-0 text-success">
                                    <i class="fas fa-check-circle me-2"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <small class="fw-semibold">SEO Optimization</small>
                                    <small class="d-block text-muted">Include relevant keywords</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .file-upload-area {
            border-color: #dee2e6;
            transition: all 0.3s ease;
            background: #fafafa;
            cursor: pointer;
        }

            .file-upload-area:hover {
                border-color: #3b5d50;
                background: #f8f9fa;
            }

            .file-upload-area.dragover {
                border-color: #3b5d50;
                background: #e8f5e8;
                border-style: solid;
            }

        .border-dashed {
            border-style: dashed !important;
        }

        .file-upload-placeholder {
            pointer-events: none;
        }

        .char-count-warning {
            color: #dc3545;
        }

        .char-count-success {
            color: #198754;
        }

        .loading-spinner {
            display: none;
        }
    </style>
}

@section Scripts {
    <script>
        // Character counter for category name
        document.getElementById('categoryName').addEventListener('input', function() {
            const charCount = this.value.length;
            const counter = document.getElementById('charCount');
            counter.textContent = charCount;

            if (charCount > 80) {
                counter.classList.add('char-count-warning');
                counter.classList.remove('char-count-success');
            } else if (charCount > 0) {
                counter.classList.add('char-count-success');
                counter.classList.remove('char-count-warning');
            } else {
                counter.classList.remove('char-count-warning', 'char-count-success');
            }
        });

        // Drag and drop functionality
        function handleDragOver(e) {
            e.preventDefault();
            e.stopPropagation();
            e.dataTransfer.dropEffect = 'copy';
            document.getElementById('dropZone').classList.add('dragover');
        }

        function handleDragLeave(e) {
            e.preventDefault();
            e.stopPropagation();
            document.getElementById('dropZone').classList.remove('dragover');
        }

        function handleDrop(e) {
            e.preventDefault();
            e.stopPropagation();
            document.getElementById('dropZone').classList.remove('dragover');

            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleFiles(files[0]);
            }
        }

        function handleFileSelect(input) {
            if (input.files && input.files[0]) {
                handleFiles(input.files[0]);
            }
        }

        function handleFiles(file) {
            const previewContainer = document.getElementById('imagePreviewContainer');
            const preview = document.getElementById('imagePreview');
            const fileInfo = document.getElementById('fileInfo');
            const dropZone = document.getElementById('dropZone');

            // Validate file
            if (!validateFile(file)) {
                return;
            }

            // Hide drop zone, show preview
            dropZone.style.display = 'none';
            previewContainer.classList.remove('d-none');

            // Display file info
            const fileSize = (file.size / 1024 / 1024).toFixed(2);
            fileInfo.innerHTML = `
                <strong>${file.name}</strong><br>
                Size: ${fileSize} MB | Type: ${file.type}
            `;

            // Preview image
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }

        function validateFile(file) {
            const maxSize = 2 * 1024 * 1024; // 2MB
            const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];

            if (file.size > maxSize) {
                showAlert('File size must be less than 2MB', 'danger');
                return false;
            }

            if (!validTypes.includes(file.type)) {
                showAlert('Please select a valid image file (JPG, PNG, GIF)', 'danger');
                return false;
            }

            return true;
        }

        function clearImagePreview() {
            const fileInput = document.getElementById('categoryImage');
            const previewContainer = document.getElementById('imagePreviewContainer');
            const dropZone = document.getElementById('dropZone');
            const fileInfo = document.getElementById('fileInfo');

            fileInput.value = '';
            previewContainer.classList.add('d-none');
            dropZone.style.display = 'block';
            fileInfo.innerHTML = '';
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.querySelector('.card-body').insertBefore(alertDiv, document.querySelector('form'));

            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }

        // Enhanced form submission
        document.getElementById('categoryForm').addEventListener('submit', function(e) {
            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.innerHTML;

            submitBtn.disabled = true;
            submitBtn.innerHTML = `
                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                Creating...
            `;

            // Form is valid, allow submission
            return true;
        });

        // Click on drop zone to trigger file input
        document.getElementById('dropZone').addEventListener('click', function() {
            document.getElementById('categoryImage').click();
        });

        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();

                            // Scroll to first invalid field
                            const firstInvalid = form.querySelector('.form-control:invalid');
                            if (firstInvalid) {
                                firstInvalid.scrollIntoView({
                                    behavior: 'smooth',
                                    block: 'center'
                                });
                                firstInvalid.focus();
                            }
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
